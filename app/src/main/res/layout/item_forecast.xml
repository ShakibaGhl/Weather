<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/item_background">

            <TextView
                android:id="@+id/item_text_view_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 C  "
                android:textSize="40dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/item_image_view_weather_condition"
                android:layout_toRightOf="@id/item_text_view_temp"
                android:layout_marginTop="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_sun"/>

            <TextView
                android:layout_below="@id/item_text_view_temp"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_text_view_weather_condition"
                android:text="sunny"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/item_text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Jan 24, 2021"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textColor="@color/white"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>